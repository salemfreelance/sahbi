{% extends "FOSUserBundle::login-layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <img  src="{{asset('img/icon.png')}}" class="img-responsive" />

            <div class="login-panel panel panel-default">
                    <div class="panel-body alert-danger">
                  {{ 'resetting.password_already_requested'|trans }}
              </div>
        </div>
          <a class="btn btn-success" href="{{ path('fos_user_security_login') }}"> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    </div>
</div>
</div>
{% endblock fos_user_content %}
