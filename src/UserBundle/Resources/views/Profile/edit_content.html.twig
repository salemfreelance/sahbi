{% trans_default_domain 'FOSUserBundle' %}
<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="{{path('fos_user_profile_show')}}">Profile</a></li>
    <li class="active">Modifier</li>
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE TITLE -->
<div class="page-title">
    <h2><span class="fa fa-gears"></span> Modifier vos infos</h2>
</div>
<!-- END PAGE TITLE -->
   <div class="row" style="transform: translateY(20%);">
     <div class="col-md-4 ">
     </div>
      <div class="col-md-4 ">
         <div class="login-panel panel panel-default">
            <div class="panel-heading">
               <div class="panel-body">
                  <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
                  {{ form_row(form._token) }}
                      <div class="form-group">
                      {{ form_label(form.username) }}
                      {{ form_errors(form.username) }}
                      {{ form_widget(form.username,  {'attr': {'class': 'form-control'}}) }}
                    </div>
                      <div class="form-group">
                      {{ form_label(form.email) }}
                      {{ form_errors(form.email) }}
                      {{ form_widget(form.email,  {'attr': {'class': 'form-control'}}) }}
                    </div>
                      <div class="form-group">
                      {{ form_label(form.current_password)}}
                      {{ form_errors(form.current_password,  {'error_attr': {'class': 'alert'}}) }}
                      {{ form_widget(form.current_password,  {'attr': {'class': 'form-control'}}) }}
                    </div>
                  <div>
                     <input type="submit" class="btn btn-info" value="{{ 'profile.edit.submit'|trans }}" />
                  </div>
                  </form>

               </div>
            </div>
         </div>
      </div>
      <div class="col-md-4 ">
      </div>
   </div>
